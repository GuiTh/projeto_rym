generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id       Int             @id @default(autoincrement())
  email         String          @unique
  userName      String
  passWord      String
  createdAt     DateTime        @default(now())
  Reviews       Reviews[]
  Ratings       Ratings[]
  Comments      Comments[]
  UserFavorites UserFavorites[]
}

model Artists {
  artist_id   Int           @id @default(autoincrement())
  name        String        @unique
  bio         String?
  createdAt   DateTime      @default(now())
  AlbumArtist AlbumArtist[]
  Songs       Songs[]
}

model Albuns {
  album_id      Int             @id @default(autoincrement())
  title         String          @unique
  releaseDate   DateTime?
  coverUrl      String?
  createdAt     DateTime        @default(now())
  Songs         Songs[]
  Reviews       Reviews[]
  Ratings       Ratings[]
  UserFavorites UserFavorites[]
  AlbumArtist   AlbumArtist[]
  AlbumGenres   AlbumGenres[]
  Comments      Comments[]
}

model Songs {
  song_id    Int          @id @default(autoincrement())
  title      String
  albumID    Int
  album      Albuns       @relation(fields: [albumID], references: [album_id])
  artist     Artists      @relation(fields: [artistId], references: [artist_id])
  artistId   Int
  duration   Int?
  createdAt  DateTime     @default(now())
  SongGenres SongGenres[]
}

model Reviews {
  review_id  Int      @id @default(autoincrement())
  userID     Int
  user       User     @relation(fields: [userID], references: [user_id])
  albumID    Int
  album      Albuns   @relation(fields: [albumID], references: [album_id])
  rating     Int
  reviewText String
  createdAt  DateTime @default(now())
}

model Ratings {
  rating_id Int      @id @default(autoincrement())
  userID    Int
  user      User     @relation(fields: [userID], references: [user_id])
  albumID   Int
  album     Albuns   @relation(fields: [albumID], references: [album_id])
  score     Int
  createdAt DateTime @default(now())

  @@unique([userID, albumID])
}

model Genres {
  genre_id    Int           @id @default(autoincrement())
  name        String        @unique
  AlbumGenres AlbumGenres[]
  SongGenres  SongGenres[]
}

model Comments {
  comment_id  Int      @id @default(autoincrement())
  commentText String
  user        User     @relation(fields: [userId], references: [user_id])
  userId      Int
  albumID     Int
  album       Albuns   @relation(fields: [albumID], references: [album_id])
  createdAt   DateTime @default(now())
}

model UserFavorites {
  userID  Int
  user    User   @relation(fields: [userID], references: [user_id])
  albumID Int
  album   Albuns @relation(fields: [albumID], references: [album_id])

  @@id([userID, albumID])
}

model AlbumArtist {
  artistId Int
  artist   Artists @relation(fields: [artistId], references: [artist_id])
  albumId  Int
  album    Albuns  @relation(fields: [albumId], references: [album_id])

  @@id([albumId, artistId])
}

model AlbumGenres {
  genreId Int
  genre   Genres @relation(fields: [genreId], references: [genre_id])
  albumId Int
  album   Albuns @relation(fields: [albumId], references: [album_id])

  @@id([albumId, genreId])
}

model SongGenres {
  songId  Int
  song    Songs  @relation(fields: [songId], references: [song_id])
  genreId Int
  genre   Genres @relation(fields: [genreId], references: [genre_id])

  @@id([songId, genreId])
}
